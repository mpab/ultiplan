#!/bin/sh

[ -z "$ULTIPLAN_HOME" ] && echo "ERROR: ULTIPLAN_HOME is not set" && exit

ultiplanProject=$PWD
if [ ! -z $(uname | grep MINGW64) ]; then
  echo windows OS detected
  ultiplanProject=$(cmd.exe /c cd)
fi

cd $ULTIPLAN_HOME/api
cp env .env
echo "ultiplanProject=$ultiplanProject" >> .env
yarn start
